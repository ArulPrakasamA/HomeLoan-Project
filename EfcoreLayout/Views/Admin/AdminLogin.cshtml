@model EfcoreLayout.Models.Admin

@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/BankingMaster.cshtml";
}



<hr />
<center><h2> Admin Login</h2></center>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdminId" class="control-label"></label>
                <input asp-for="AdminId" class="form-control" />
                <span asp-validation-for="AdminId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminPassword" class="control-label"></label>
                <input type="password" asp-for="AdminPassword" class="form-control" />
                <span asp-validation-for="AdminPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div style="color:red">
    @ViewBag.Error <br />
</div>



@model EfcoreLayout.Models.LoanDetail

@{
    ViewData["Title"] = "Approveonclick";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<h1>Loan Approval</h1>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Amount)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Amount)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.InterestRate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.InterestRate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Tenure)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Tenure)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.LoanDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.LoanDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ApplicationId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ApplicationId)
    </dd>
</dl>
<br />
<form asp-action="Approveonclick">

    <center>
        <input name="status" type="submit" value="Approve" class="btn btn-success" />
        <input name="status" type="submit" value="Reject" class="btn btn-success" />
    </center>
</form>

